<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="System.Configuration.IgnoreSectionHandler"/>
  </configSections>
  <log4net>
    <root>
      <level value="WARN"/>
      <appender-ref ref="ConsoleAppender"/>
    </root>
    <!--Debug-->
    <logger name="Debug">
      <level value="WARN"/>
      <appender-ref ref="RollingLogFileAppender_Debug"/>
    </logger>
    <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="Logs\RollingLog_Debug\rolling-log.txt"/>
      <appendToFile value="true"/>
      <maxSizeRollBackups value="10"/>
      <maximumFileSize value="100"/>
      <rollingStyle value="Size"/>
      <staticLogFileName value="true"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%message"/>
      </layout>
    </appender>
    <!--Release-->
    <logger name="Release">
      <level value="ALL"/>
      <appender-ref ref="RollingLogFileAppender_Release"/>
    </logger>
    <appender name="RollingLogFileAppender_Release" type="log4net.Appender.RollingFileAppender">
      <file value="Logs\RollingLog_Release\rolling-log.txt"/>
      <appendToFile value="true"/>
      <maxSizeRollBackups value="10"/>
      <maximumFileSize value="100"/>
      <rollingStyle value="Size"/>
      <staticLogFileName value="true"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%message"/>
      </layout>
    </appender>
    <!--Common Appenders-->
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%message"/>
      </layout>
    </appender>
  </log4net>
</configuration>